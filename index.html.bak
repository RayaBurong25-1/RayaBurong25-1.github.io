<HTML>
	<script>
		var goUp = 0;
		window.onscroll = function()
		{
			setIntroWidth();
			if (goUp == 1)
			{
				sendUp();
			}
		};
		function sendUp()
		{
			goUp = 1;
			window.scrollBy(0, -5);
			var pos = document.body.scrollTop;
			if (pos == 0)
			{
				goUp = 0;
			}
		}
		function scrollToCat(num, element)
		{
			var pos = document.body.scrollTop;
			document.getElementById("body1").style.visibility = "collapse";
			document.getElementById("body2").style.visibility = "collapse";
			document.getElementById("body3").style.visibility = "collapse";
			document.getElementById("body4").style.visibility = "collapse";
			element.style.visibility = "visible";
			window.scrollBy(0,num*1000-pos);
		}
		function setIntroWidth()
		{
			var pos = document.body.scrollTop;
			var arunHeight = 150 - pos;
			if (arunHeight < 100)
			{
				arunHeight = 100;
			}
			var introHeight = 0;
			if (document.body.clientHeight > arunHeight + 50)
			{
				introHeight = document.body.clientHeight - arunHeight - 50;
			}
			document.getElementById("arun").style.height = arunHeight + "px";
			document.getElementById("intro").style.height = introHeight + "px";
		}
		function highlight(element)
		{
			element.style.backgroundColor = "#fe9800";
		}
		function unhighlight(element)
		{
			element.style.backgroundColor = "#cccccc";
		}
	</script>
	<head>
		<link rel="stylesheet" type="text/css" href="rayaburong.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<style>
			body {
				overflow: hidden;
			}
			p {
				font-family: 'Montserrat', sans-serif;
				font-size: 24px;
			}
		</style>
		<title>arun.</title>
	</head>
	<body bgcolor="#dddddd" onload="setIntroWidth()">
		<table align="center" width="100%">
			<tr>
				<td>
					<img src="images/arun.png" id="arun" height="200px">
				</td>
			</tr>
			<tr bgcolor="#000000" height="1000px" id="intro">
				<td>
					<p align="center">Intro</p>
				</td>
			</tr>
		</table>
		<table align="center" width="100%" bgcolor="#dddddd">
			<tr>
				<td bgcolor="#cccccc" onmouseover="highlight(this)" onmouseout="unhighlight(this)" onclick="scrollToCat(1,document.getElementById('body1'))">
					<p align="center" id="cat1">Profile</p>
				</td>
				<td bgcolor="#cccccc" onmouseover="highlight(this)" onmouseout="unhighlight(this)" onclick="scrollToCat(2,document.getElementById('body2'))">
					<p align="center" id="cat2">Projects</p>
				</td>
				<td bgcolor="#cccccc" onmouseover="highlight(this)" onmouseout="unhighlight(this)" onclick="scrollToCat(3,document.getElementById('body3'))">
					<p align="center" id="cat3">Gallery</p>
				</td>
				<td bgcolor="#cccccc" onmouseover="highlight(this)" onmouseout="unhighlight(this)" onclick="scrollToCat(4,document.getElementById('body4'))">
					<p align="center" id="cat4">Contact</p>
				</td>
			</tr>
		</table>
		<table align="center" width="100%" bgcolor="#cccccc">
			<tr bgcolor="#cccccc" id="body1" height="1000px" onclick="sendUp()">
				<td>
					<p align="center">Profile: nothing here yet, click to be sent back up</p>
				</td>
			</tr>
			<tr bgcolor="#dddddd" id="body2" height="1000px" onclick="sendUp()">
				<td>
					<p align="center">Projects: nothing here yet, click to be sent back up</p>
				</td>
			</tr>
			<tr bgcolor="#cccccc" id="body3" height="1000px" onclick="sendUp()">
				<td>
					<p align="center">Gallery: nothing here yet, click to be sent back up</p>
				</td>
			</tr>
			<tr bgcolor="#dddddd" id="body4" height="1000px" onclick="sendUp()">
				<td>
					<p align="center">Contact: nothing here yet, click to be sent back up</p>
				</td>
			</tr>
		</table>
	</body>
</HTML>